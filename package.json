{
  "name": "aiqedge-smtp",
  "version": "1.0.0",
  "description": "A scalable and robust SMTP server application using TypeScript and clean architecture.",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production node -- --watch --env-file=./.env.production dist/server.js",
    "dev": "NODE_ENV=development ts-node -- --watch --env-file=./.env.development src/server.ts",
    "qa": "NODE_ENV=test node -- --watch --env-file=./.env.test dist/server.js",
    "staging": "NODE_ENV=staging node -- --watch --env-file=./.env.staging dist/server.js",
    "test": "jest",
    "dev:migrate:up": "NODE_ENV=development dotenv -e .env.development -c development npx sequelize-cli db:migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paullaster/aiqedge-smtp.git"
  },
  "keywords": [
    "node",
    "typescript",
    "smtp",
    "clean-architecture"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@brainspore/shackuz": "^1.4.1",
    "bullmq": "^5.52.2",
    "express": "^5.1.0",
    "ioredis": "^5.6.1",
    "mime-types": "^3.0.1",
    "nodemailer": "^7.0.3",
    "pg": "^8.15.6",
    "pg-hstore": "^2.3.4",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.3",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/jest": "^27.0.2",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.15.17",
    "@types/nodemailer": "^6.4.17",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "sequelize-cli": "^6.6.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "type": "module"
}
