# Application
APP_NAME=your-app-name
APP_PORT=3000
NODE_ENV=development

# Database (Sequelize/Postgres)
DB_HOST=your-db-host
DB_DIALECT=postgres
DB_NAME=your-db-name
DB_PORT=5432
DB_PASSWORD=your-db-password
DB_USER=your-db-user
APP_TIMEZONE=+03:00
SEQUELIZE_LOG_QUERY_PARAMETERS=false
POOL_MAX=10
POOL_MIN=0
POOL_ACQUIRE=30000
POOL_IDLE=10000

# SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=smtp-user@example.com
SMTP_PASS=smtp-password
SMPT_ENCRYPTION=false

# Redis
REDIS_HOST=redis-host
REDIS_PORT=6379

# Logging (Pino)
PINO_LOG_LEVEL=info
PINO_LOG_ROTATION=daily
PINO_ROTATION_INTERVAL=1d
PINO_ROTATION_MAX_SIZE=10m
PINO_ROTATION_MAX_FILES=14d

# Cluster (optional)
CLUSTER_WORKERS=2

